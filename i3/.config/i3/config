# Set up networking
exec --no-startup-id nm-applet

# Set up compton
exec --no-startup-id compton -b

# Set up audio
exec --no-startup-id start-pulseaudio-x11

# Set up timeout lock
exec --no-startup-id xautolock -detectsleep -time 3 -locker blank -corners 000- -notify 30 -notifier "notify-send -u normal 'TIMOUT' 'System will lock in 30 seconds'"

# Set up dropbox
exec --no-startup-id dropbox

 # Set up redshift
exec --no-startup-id pgrep redshift &> /dev/null || redshift -l 33.75:84.39 &> /dev/null & 

# Enable touchpad tap
exec xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1

# Map capslock to escape
exec_always setxkbmap -option caps:escape 

# Remove middle click on touchpad
exec_always xinput -set-button-map "SynPS/2 Synaptics TouchPad" 1 1 3

