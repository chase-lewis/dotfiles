# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#00b33c"
        color_degraded = "#ff9933"
        color_bad = "#cc575d"
}

order += "volume master"
# order += "ipv6"
# order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "battery all"
# order += "load"
order += "tztime local"

volume master {
        format = "ğŸ %volume"
        format_muted = "ğŸ•¨ %volume"
        device = "pulse"
        mixer = "Master"
}

wireless _first_ {
        format_up = "ğŸ–§ %ip (%essid:%quality)"
        format_down = "ğŸ–§ down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "âš¼ %ip (%speed)"
        format_down = "âš¼ down"
}

battery all {
        format = "â» %percentage"
        integer_battery_capacity = true
}

tztime local {
        format = "â² %m-%d   %H:%M"
}

load {
        format = "%1min"
}

cpu_usage {
        format = "â›£ %usage"
        max_threshold = 75
        degraded_threshold = 50
}

disk "/" {
        format = "%avail"
}
